@model List<Licensing_Web.Models.ImportDataModel>

@{
	var title = ViewBag.Title;
	var section = ViewBag.Section ?? "ImportData";
}

<link rel="stylesheet" href="~/css/ImportData.css" asp-append-version="true" />
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/ImportData.js" asp-append-version="true"></script> 

<body>
	<header class="white-bar">
		<h5>@title </h5>
	</header>
	<div class="container-wrap">
		<div class="container-left">
			@await Component.InvokeAsync("SideBar")
		</div>
		<div class="container-right" id="container-right">
			<div class="table-container">
				<div class="head-wraps">
					<span class="date">Data uploaded</span>
					<span class="type">Data type</span>
					<span class="type">Records</span>
				</div>

				@for (int i = 0; i < Model.Count; i++)
				{
					var rowcolor = (i % 2 == 0) ? "#fcfcfc" : "#f2f3f7";
					<div class="data-container" style="background-color:@rowcolor">
						<span class="date">@Model[i].date</span>
						<span class="type">@Model[i].type</span>
						<span class="type">@Model[i].records</span>
						<button class="delete-btn" data-id="@Model[i].id">Delete</button> 
					</div>
				}
			</div>
			<div class="file-container">
				<div class="file-left">
					<input type="file" id="myFile" name="filename">
					<select id="categoryFilter" class="category-session">
						<option value="all">--Select file type--</option>
						<option value="Finance(Bacs)">Finance(Bacs)</option>
						<option value="HICOM">HICOM</option>
						<option value="Supplier Numbers">Supplier Numbers</option>
						<option value="Booker Finance">Booker Finance</option>
						<option value="One Stop Finance">One Stop Finance</option>
						<option value="Petroleum/Fire Authorities">Petroleum/Fire Authorities</option>
					</select>
				</div>
				<div class="file-right">
					<span id="importFileBtn"> <img src="~/icons/add.png" />   Import File</span>
				</div>
			</div>
		</div>
	</div>
	<script>
		var section = "@ViewBag.Section";
			
	</script>


</body>